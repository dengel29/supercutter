{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "engines": {
    "node": ">= 14.15 <15"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/fluent-ffmpeg": "^2.1.16",
    "@types/he": "^1.1.1",
    "@types/jest": "~26.0.15",
    "@types/node": "~14.14",
    "@types/nunjucks": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "~4.7.0",
    "@typescript-eslint/parser": "~4.7.0",
    "chokidar": "^3.4.3",
    "concurrently": "^5.3.0",
    "eslint": "~7.13.0",
    "eslint-config-prettier": "~6.15.0",
    "eslint-plugin-jest": "~24.1.3",
    "jest": "~26.6.3",
    "prettier": "~2.1.2",
    "rimraf": "~3.0.2",
    "ts-jest": "~26.4.4",
    "ts-node-dev": "^1.1.1",
    "tsutils": "~3.17.0",
    "typescript": "~4.0.5"
  },
  "scripts": {
    "start:dev": "export NODE_ENV=development && npm run build && concurrently npm:watch-*",
    "start:prod": "export NODE_ENV=production && node main.js",
    "clean": "rimraf coverage build tmp",
    "watch-dev": "tsnd --respawn src/main.ts",
    "build": "tsc -p tsconfig.release.json",
    "build:all": "npm run build && node-sass src/styles/** -o build/src/styles/ && cp -r src/views/ build/src/views",
    "watch-build": "tsc -w -p tsconfig.release.json",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "style": "node-sass-chokidar src/styles -o build/src/styles/",
    "watch-style": "node-sass-chokidar src/styles -o build/src/styles/ --watch",
    "prod:deliver": "npm run build:all && cp .env ecosystem.config.js package.json build/src/ && scp -r ./build root@139.59.242.210:~/supercutter"
  },
  "author": "Dan Engel",
  "dependencies": {
    "aws-sdk": "^2.818.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fluent-ffmpeg": "^2.1.2",
    "he": "^1.2.0",
    "lite-youtube-embed": "^0.1.3",
    "node-sass": "^5.0.0",
    "node-sass-chokidar": "^1.5.0",
    "nunjucks": "^3.2.2",
    "socket.io": "^3.1.1",
    "striptags": "^3.1.1",
    "tslib": "~2.0.3",
    "viya": "^1.0.1",
    "ws": "^7.4.3",
    "youtube-captions-scraper": "^1.0.3",
    "ytdl-core": "^4.4.5"
  },
  "volta": {
    "node": "14.15.0"
  }
}
